<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"/>
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .login {
            float: right;
            margin: 7px 20px;
        }
    </style>
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="index1.html">
                    <img src="~/Content/img/qbeSeguros_logo.png" class="img-responsive" />
                </a>
            </div>
            <div class="notifications-wrapper">
                <ul class="nav">
                    <li class="login" id="my-log-content">
                        <p>
                            <i class="fa fa-sign-out" aria-hidden="true"></i><a href="logout.html" target="_self" class="navbar-link">Logout</a>
                        </p>
                    </li>
                    @*<li class="login" id="my-log-content">
                            <p>
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <a href="maintemplate.html" target="_self" class="navbar-link">
                                    Nombre del Usuario
                                </a>
                            </p>
                        </li>*@
                </ul>
            </div>
        </nav>

        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li>
                        <div class="user-img-div">
                            <a href="maintemplate.html">
                                <img src="~/Content/img/user.jpg" alt="User" class="img-circle" />
                            </a>
                        </div>
                    </li>
                    <li style="color: white; text-align:center; background-color: #009fe3;">
                        Nombre del Usuario
                    </li>
                    <li runat="server" id="liReports">
                        <a href="Reports.aspx" runat="server"><i class="fa fa-book"></i>Reports</a>
                        <a href="Reports.aspx" runat="server"><i class="fa fa-book"></i>Reports</a>
                    </li>

                    <li runat="server" id="liApplicaciones">
                        <a href="Applications.aspx" runat="server"><i class="fa fa-address-card"></i>Applications</a>
                    </li>

                    <li runat="server" id="liAdmin">
                        <a href="Admin.aspx" runat="server"><i class="fa fa-lock"></i>Administration</a>
                    </li>

                    <li runat="server" id="liDashboard">
                        <a href="WorkflowEndosos.aspx" runat="server"><i class="fa fa-dashboard"></i>Workflow Endosos</a>
                    </li>

                    <li class="showMenu" id="HideMenu">
                        <a href="maintemplate.html">
                            <i class="fa fa-user icon-color" aria-hidden="true"></i>Profile
                        </a>
                    </li>
                    <li class="showMenu" id="HideMenu">
                        <a href="maintemplate.html">
                            <i class="fa fa-user icon-color" aria-hidden="true"></i>Profile
                        </a>
                    </li>
                    <li class="showMenu" id="HideMenu">
                        <a href="logout.html">
                            <i class="fa fa-sign-out icon-color" aria-hidden="true"></i>Logout
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper" class="page-wrapper-cls">
            <div id="page-inner">
                @RenderBody()
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12">

                        <!--- sistema de mensajes para el usuario Sweet Alerts 2--->
                        <!--- https://limonte.github.io/sweetalert2/ --->
                        <script type="text/javascript">
                            function GoodJob() {
                                swal({
                                    title: "Atenci&oacute;n !",
                                    text: "Bienvenido.",
                                    type: "success",
                                    confirmButtonText: 'Regresar'
                                })
                            };
                        </script>
                        <script type="text/javascript">

                            function FailedJob() {
                                swal({
                                    title: 'Atenci&oacute;n!',
                                    text: 'Problemas con las credenciales',
                                    type: 'error',
                                    confirmButtonText: 'Regresar'
                                });
                            }

                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <footer>
        <div align="right">
            &copy; Copyright
            <a href="https://qbepr.com/qbepr/" target="_blank">
                <strong>QBE Seguros</strong>
            </a>&nbsp;@DateTime.Now.Year.&nbsp;Todos los derechos reservados.

            <br /><br />
            <a href="https://www.facebook.com/QBEpuertorico" target="_blank">
                <img src="@Url.Content("~/Content/img/fb.png")" height="30px" width="30px" title="Facebook" />
            </a>&nbsp;&nbsp;&nbsp;

            <a href="https://twitter.com/qbepuertorico" target="_blank">
                <img src="@Url.Content("~/Content/img/twitter.png")" height="30px" width="30px" title="Twitter" />
            </a>&nbsp;&nbsp;&nbsp;

            <a href="https://www.youtube.com/channel/UC-p6t_Sc8h0bb7b8Gl4nfWA" target="_blank">
                <img src="@Url.Content("~/Content/img/youtube.png")" height="30px" width="30px" title="Youtube" />
            </a>&nbsp;&nbsp;&nbsp;

            <a href="https://www.google.com" target="_blank">
                <img src="@Url.Content("~/Content/img/google.png")" height="30px" width="30px" title="Google +" />
            </a>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
